<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ModernLoginController"
            prefWidth="400" prefHeight="600" styleClass="root-pane">

    <!-- Background -->
    <VBox alignment="CENTER" spacing="20" styleClass="login-container" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Title -->
        <Label text="Welcome Back!" styleClass="login-title"/>

        <!-- Input Fields -->
        <VBox spacing="15" styleClass="form-container">
            <TextField fx:id="emailField" promptText="Email Address" styleClass="input-field"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>
        </VBox>

        <!-- Buttons and Links -->
        <VBox spacing="10" styleClass="actions-container">
            <Button fx:id="loginButton" text="Sign In" styleClass="login-button"/>
            <Hyperlink fx:id="forgotPasswordLink" text="Forgot Password?" styleClass="forgot-link"/>
        </VBox>

        <!-- Footer -->
        <Label text="Don't have an account? Sign up now" styleClass="footer-text"/>
    </VBox>
</AnchorPane>
